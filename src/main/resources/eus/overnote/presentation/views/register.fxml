<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<StackPane prefHeight="500.0" prefWidth="800.0" style="-fx-background-color: transparent;" stylesheets="@../styles.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="eus.overnote.presentation.views.RegisterController">
    <children>
      
          <!-- Main Content -->
          <HBox style="-fx-background-color: transparent;">
              <children>
                  <!-- Left Panel (Register Form) -->
                  <VBox alignment="CENTER_LEFT" prefHeight="487.0" prefWidth="424.0" style="-fx-background-color: white;" HBox.hgrow="ALWAYS">
                      <padding>
                          <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
                      </padding>
                      <children>
                          <Label text="Create Account" textFill="#333333">
                              <font>
                                  <Font name="System Bold" size="22.0" />
                              </font>
                              <VBox.margin>
                                  <Insets bottom="25.0" />
                              </VBox.margin>
                     <styleClass>
                        <String fx:value="title-dark" />
                        <String fx:value="title" />
                     </styleClass>
                          </Label>
      
                          <!-- Full Name Field -->
                          <Label text="FULL NAME" textFill="#666666">
                              <font>
                                  <Font name="System Bold" size="11.0" />
                              </font>
                              <VBox.margin>
                                  <Insets bottom="5.0" />
                              </VBox.margin>
                          </Label>
                          <TextField fx:id="fullNameField" promptText="John Doe">
                              <VBox.margin>
                                  <Insets bottom="15.0" />
                              </VBox.margin>
                              <padding>
                                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                              </padding>
                          </TextField>
      
                          <!-- Email Field -->
                          <Label text="EMAIL" textFill="#666666">
                              <font>
                                  <Font name="System Bold" size="11.0" />
                              </font>
                              <VBox.margin>
                                  <Insets bottom="5.0" />
                              </VBox.margin>
                          </Label>
                          <TextField fx:id="emailField" promptText="example@email.com">
                              <VBox.margin>
                                  <Insets bottom="15.0" />
                              </VBox.margin>
                              <padding>
                                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                              </padding>
                          </TextField>
      
                          <!-- Password Field -->
                          <Label text="PASSWORD" textFill="#666666">
                              <font>
                                  <Font name="System Bold" size="11.0" />
                              </font>
                              <VBox.margin>
                                  <Insets bottom="5.0" />
                              </VBox.margin>
                          </Label>
                          <PasswordField fx:id="passwordField" promptText="At least 8 characters">
                              <VBox.margin>
                                  <Insets bottom="15.0" />
                              </VBox.margin>
                              <padding>
                                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                              </padding>
                          </PasswordField>
      
                          <!-- Confirm Password Field -->
                          <Label text="CONFIRM PASSWORD" textFill="#666666">
                              <font>
                                  <Font name="System Bold" size="11.0" />
                              </font>
                              <VBox.margin>
                                  <Insets bottom="5.0" />
                              </VBox.margin>
                          </Label>
                          <PasswordField fx:id="confirmPasswordField" promptText="Confirm your password">
                              <VBox.margin>
                                  <Insets bottom="25.0" />
                              </VBox.margin>
                              <padding>
                                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                              </padding>
                          </PasswordField>
      
                          <!-- Terms Checkbox -->
                          <CheckBox fx:id="termsCheckbox" text="I agree to the Terms of Service and Privacy Policy" textFill="#666666">
                              <VBox.margin>
                                  <Insets bottom="20.0" />
                              </VBox.margin>
                          </CheckBox>
      
                          <!-- Register Button -->
                          <Button fx:id="registerButton" maxWidth="1.7976931348623157E308" mnemonicParsing="false" styleClass="button-primary" text="Create Account">
                              <padding>
                                  <Insets bottom="10.0" top="10.0" />
                              </padding>
                              <font>
                                  <Font name="System Bold" size="14.0" />
                              </font>
                          </Button>
                      </children>
                  </VBox>
      
                  <!-- Right Panel (Welcome Message) -->
                  <VBox alignment="CENTER" prefHeight="487.0" prefWidth="350.0" styleClass="primary-color" HBox.hgrow="ALWAYS">
                      <padding>
                          <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
                      </padding>
                      <children>
                          <Label text="Welcome to Overnote" textFill="WHITE">
                              <font>
                                  <Font name="System Bold" size="24.0" />
                              </font>
                              <VBox.margin>
                                  <Insets bottom="15.0" />
                              </VBox.margin>
                     <styleClass>
                        <String fx:value="title-light" />
                        <String fx:value="title" />
                     </styleClass>
                          </Label>
      
                          <Label text="Already have an account?" textFill="WHITE">
                              <font>
                                  <Font size="14.0" />
                              </font>
                              <VBox.margin>
                                  <Insets bottom="20.0" />
                              </VBox.margin>
                     <styleClass>
                        <String fx:value="subtitle" />
                        <String fx:value="title-light" />
                     </styleClass>
                          </Label>
      
                          <Button fx:id="signInButton" mnemonicParsing="false" styleClass="button-secondary" text="Sign In">
                              <padding>
                                  <Insets bottom="8.0" left="25.0" right="25.0" top="8.0" />
                              </padding>
                              <font>
                                  <Font name="System Bold" size="12.0" />
                              </font>
                          </Button>
                      </children>
                  </VBox>
              </children>
          </HBox>
    </children>
</StackPane>
