<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<BorderPane fx:id="barPane" styleClass="titlebar" stylesheets="@../styles.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="eus.overnote.presentation.components.TitleBarController">
   <center>
      <Label fx:id="titleLabel" alignment="CENTER" text="Overnote" textAlignment="CENTER" textFill="WHITE">
         <font>
            <Font name="System Bold" size="14.0" />
         </font>
         <styleClass>
            <String fx:value="subtitle" />
            <String fx:value="title-light" />
         </styleClass>
      </Label>
   </center>
   <right>
      <HBox alignment="CENTER_RIGHT" prefHeight="30.0" prefWidth="60.0" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="minimizeButton" alignment="CENTER" mnemonicParsing="false" prefHeight="30.0" prefWidth="30.0" styleClass="button-minimize" text="−" textAlignment="CENTER" />
            <Button fx:id="closeButton" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" prefHeight="30.0" prefWidth="30.0" styleClass="button-close" text="✕" textAlignment="CENTER" />
         </children>
      </HBox>
   </right>
   <left>
      <HBox alignment="CENTER_RIGHT" prefHeight="30.0" prefWidth="60.0" BorderPane.alignment="CENTER" />
   </left>
</BorderPane>
