<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<BorderPane fx:id="root" stylesheets="@../styles.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="eus.overnote.presentation.components.CustomWindowController">
   <center>
      <BorderPane fx:id="container" stylesheets="@../styles.css">
         <top>
            <BorderPane BorderPane.alignment="CENTER">
               <center>
                  <BorderPane fx:id="barPane" styleClass="titlebar" stylesheets="@../styles.css">
                     <center>
                        <Label fx:id="titleLabel" alignment="CENTER" text="Overnote" textAlignment="CENTER" textFill="WHITE">
                           <font>
                              <Font name="System Bold" size="14.0" />
                           </font>
                           <styleClass>
                              <String fx:value="subtitle" />
                              <String fx:value="title-light" />
                           </styleClass>
                        </Label>
                     </center>
                     <right>
                        <HBox alignment="CENTER_RIGHT" prefHeight="33.0" prefWidth="99.0" BorderPane.alignment="CENTER">
                           <children>
                              <Button fx:id="minimizeButton" alignment="CENTER" mnemonicParsing="false" prefHeight="33.0" prefWidth="33.0" styleClass="button-minimize" text="âˆ’" textAlignment="CENTER" />
                              <Button fx:id="maximizeButton" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" prefHeight="33.0" prefWidth="33.0" styleClass="button-maximize" text="ðŸ—–" textAlignment="CENTER" />
                              <Button fx:id="closeButton" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" prefHeight="33.0" prefWidth="33.0" styleClass="button-close" text="âœ•" textAlignment="CENTER" />
                           </children>
                        </HBox>
                     </right>
                     <left>
                        <HBox alignment="CENTER_RIGHT" prefHeight="33.0" prefWidth="99.0" BorderPane.alignment="CENTER" />
                     </left>
                  </BorderPane>
               </center>
            </BorderPane>
         </top>
      </BorderPane>
   </center>
   <left>
      <Pane fx:id="leftResize" prefWidth="5.0" styleClass="resize-corner" BorderPane.alignment="CENTER">
         <cursor>
            <Cursor fx:constant="W_RESIZE" />
         </cursor>
      </Pane>
   </left>
   <right>
      <Pane fx:id="rightResize" prefWidth="5.0" styleClass="resize-corner" BorderPane.alignment="CENTER">
         <cursor>
            <Cursor fx:constant="E_RESIZE" />
         </cursor>
      </Pane>
   </right>
   <top>
      <HBox fx:id="topResizeHBox" prefHeight="5.0" styleClass="resize-corner" BorderPane.alignment="CENTER">
         <children>
            <Pane fx:id="topLeftResize" prefHeight="5.0" prefWidth="5.0" styleClass="resize-corner">
               <cursor>
                  <Cursor fx:constant="NW_RESIZE" />
               </cursor>
            </Pane>
            <Pane fx:id="topResize" prefHeight="5.0" styleClass="resize-corner" HBox.hgrow="ALWAYS">
               <cursor>
                  <Cursor fx:constant="N_RESIZE" />
               </cursor>
            </Pane>
            <Pane fx:id="topRightResize" prefHeight="5.0" prefWidth="5.0" styleClass="resize-corner">
               <cursor>
                  <Cursor fx:constant="NE_RESIZE" />
               </cursor>
            </Pane>
         </children>
      </HBox>
   </top>
   <bottom>
      <HBox fx:id="bottomResizeHBox" prefHeight="5.0" styleClass="resize-corner" BorderPane.alignment="CENTER">
         <children>
            <Pane fx:id="bottomLeftResize" prefHeight="5.0" prefWidth="5.0" styleClass="resize-corner">
               <cursor>
                  <Cursor fx:constant="SW_RESIZE" />
               </cursor>
            </Pane>
            <Pane fx:id="bottomResize" prefHeight="5.0" styleClass="resize-corner" HBox.hgrow="ALWAYS">
               <cursor>
                  <Cursor fx:constant="S_RESIZE" />
               </cursor>
            </Pane>
            <Pane fx:id="bottomRightResize" prefHeight="5.0" prefWidth="5.0" styleClass="resize-corner">
               <cursor>
                  <Cursor fx:constant="SE_RESIZE" />
               </cursor>
            </Pane>
         </children>
      </HBox>
   </bottom>
</BorderPane>
