<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="TOP_CENTER" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="eus.overnote.presentation.components.NoteController">
   <children>
      <TextField fx:id="noteTitle" prefHeight="25.0" prefWidth="470.0" promptText="Title ..." styleClass="text-field" stylesheets="@login.css">
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
      </TextField>
      <Separator prefWidth="200.0" />
      <TextArea fx:id="noteText" prefHeight="569.0" prefWidth="470.0" promptText="Text ..." styleClass="text-field" stylesheets="@login.css" wrapText="true" VBox.vgrow="ALWAYS">
         <VBox.margin>
            <Insets />
         </VBox.margin>
      </TextArea>
   </children>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</VBox>
